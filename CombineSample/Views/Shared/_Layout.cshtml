</head>
<body>
    <header class="position-sticky top-0">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 nav-pils" id="pills-tab" role="tablist" style="background-color:purple">

            <div class="container-fluid" style="background-color:purple">
                <a class="navbar-brand nav-link text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Personal Details</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" >
                            <a class="nav-link  text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a> </button>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Employee" asp-action="EmployeeLogin">Employee</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" asp-area="User" asp-controller="Manager" asp-action="ManagerLogin">Manager</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        </div>
</header>
<div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top text-white p-3">
        <div class="container mt-2">
            <div class="row">
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <h4>IDM System</h4>
                    <p>Aspire Systems-Orbit </p>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <h4>Contact Us</h4>
                    <div class="mt-3 mb-2">
                        <span><i class="fa-solid fa-address-book fs-6"></i></span>
                        <span class="fs-6 mx-1">Contact</span>
                    </div>
                    <div class="mb-2">
                    <span><i class="fa-brands fa-facebook fs-6"></i></span>
                    <span class="fs-6 mx-1">Facebook</span>
                    </div>
                <div class="mb-2">
                <span><i class="fa-brands fa-linkedin fs-6"></i></span>
                <span class="fs-6 mx-1">LinkedIn</span>
                </div>
            <div class="mb-2">
                <span><i class="fa-solid fa-square-envelope fs-6"></i></span>
                <span class="fs-6 mx-1">G-mail</span>
             </div>
         </div>
         <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
            <h4>Address</h4>
            <pre>1/D-1, SIPCOT IT PARK Siruseri, Chennai - 603 103 Tamil Nadu, India</pre>
         </div> 
        </div>
        <div>
            <h3 class="text-center">© Copyrights 2020 Aspire Systems</h3>
        </div>
      </div>
    </footer>


   <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>


   
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
