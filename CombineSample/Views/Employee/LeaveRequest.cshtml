<div class="container">
    <div class="profile">
    <div class="row shadow rounded">
        
        <div class="col-sm-6 col-mb-6 col-lg-6 col-xl-6">
            <div class="mb-3">
                    <h2 class="text-pink text-center d-flex justify-content-right fst-italic"><h3><strong>VACATION REQUEST</strong></h3></h2>
                    <span class="fst-italic text-muted">Request vaction by filling the below form</span>
            </div>
             <form method="post" asp-action="LeaveRequest" asp-area="Employee" enctype="multipart/form-data">
            <input type="hidden" asp-for="employeeId">
            

            <div class="mb-1 row">
             <div class="form-group">
             <select id="leaveReason" name="leaveReason" class="col-sm-2 col-form-label form-control" required>
                <option value="">Please select an option</option>
                <option value="option1" selected="@(Model?.leaveReason == "Casual Leave" ? "selected" : null)">Casual Leave</option>
                <option value="Half-day Leave" selected="@(Model?.leaveReason == "Half-day Leave" ? "selected" : null)">Half-Day leave</option>
                <option value="One-day Leave" selected="@(Model?.leaveReason == "One-day Leave" ? "selected" : null)">One-day Leave</option>
                <option value="Earned Leave" selected="@(Model?.leaveReason == "Earned Leave" ? "selected" : null)">Earned Leave</option>
                <option value="Sick Leave" selected="@(Model?.leaveReason == "Sick Leave " ? "selected" : null)">Sick Leave</option>
                <option value="Maternity Leave" selected="@(Model?.leaveReason == "Maternity Leave" ? "selected" : null)" >Maternity Leave </option>
                <option value="Paternity leaves" selected="@(Model?.leaveReason == "Paternity leaves" ? "selected" : null)" >Paternity leaves</option>
                <option value="Marriage leave" selected="@(Model?.leaveReason == "Marriage leave" ? "selected" : null)" >Marriage leave </option>
                <option value="Compensatory leaves" selected="@(Model?.leaveReason == "Compensatory leaves" ? "selected" : null)" >Compensatory leaves </option>
            </select>
            <span asp-validation-for="leaveReason" class="text-danger"></span>
            </div>
            </div>

            <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="employeeLeaveStartDate" type="date" id="startDateTime" class="form-control" >
                <span asp-validation-for="employeeLeaveStartDate" class="text-danger"></span>
            </div>
            </div>
            <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="employeeLeaveEndDate" type="date" id="endDateTime" class="form-control" >
                <span asp-validation-for="employeeLeaveEndDate" class="text-danger"></span>
            </div>
            </div>
            <button align="center" type="submit" class="btn btn-sm w-100 btn-dark p-2 shawdow rounded" id="submitbutton" value="Save">Submit</button>
        </form>
        </div>
    </div>
</div>
