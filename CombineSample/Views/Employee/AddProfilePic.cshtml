@model CombineSample.Models.Employee
@{
    Layout="_Layout";
     ViewData["Title"] = "ProfileImage";
}
<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>SignUp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PersonalDetails.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" 
    integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" 
    crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
<div class="container">
    <div class="profile">
    <div class="row shadow rounded">
        
        <div class="col-sm-6 col-mb-6 col-lg-6 col-xl-6">
            <div class="mb-3">
                    <h2 class="text-pink text-center d-flex justify-content-right fst-italic"><h3><strong>EDIT PROFILE</strong></h3></h2>
                    <span class="fst-italic text-muted">Add Profile Images</span>
            </div>
           <p>Employee Id: @Model.employeeId</p>
        <form method="post" asp-action="AddProfilePicE" asp-area="Employee">
            <input type="hidden" asp-for="employeeId">
            <div class="form-group">
                <label asp-for="employeeImage" class="col-sm-2 col-form-label">Add Profile Photo</label>
                <input asp-for="employeeImage" type="file" class="form-control-file" id="imageData" accept="image/*" required>
            </div>
            <button align="center" type="submit" class="btn btn-sm w-100 btn-dark p-2 shawdow rounded" id="submitbutton" value="Save">Submit</button>
        </form>
    </div>
            
        </div>
    
        
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
        