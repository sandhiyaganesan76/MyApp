@model CombineSample.Models.Manager
@{
    Layout="_Layout";
     ViewData["Title"] = "ManagersignUp";
}
<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>SignUp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PersonalDetails.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" 
    integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" 
    crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<div class="container">
    <div class="row shadow rounded">
        <div class="col-sm-8 col-md-8 col-ig-8 col-xl-6">
            <div>
            <img src="~/Images/carouselImages/office.jpg" class="w-100 h-100" alt="Welcome">
            </div>
        </div>
        <div class="col-sm-6 col-mb-6 col-lg-6 col-xl-6">
           <form method="post">
        <div class="mb-1 row">
            <div class="mb-3">
                    <h2 class="text-pink text-center d-flex justify-content-right fst-italic"><h3><strong>MANAGER REGISTER</strong></h3></h2>
                    <span class="fst-italic text-muted">Create Your Account</span>
            </div>
            <div class="form-group">
                <input asp-for="managerName" type="text" class="form-control" id="Name" required >
                <span asp-validation-for="managerName"></span>
                
            </div>
        </div>
        <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="managerEmail" type="email" class="form-control" id="Email" required>
                <span asp-validation-for="managerEmail"></span>
        </div>
        
        <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="managerPassword" type="password" class="form-control" id="Password"required >
                <span asp-validation-for="managerPassword"></span>
                
            </div>
        </div>
        <div class="form-group">
            <p class=" text-danger text-center mb-4">@ViewData["Message"]</p>
	    </div>
        <div>
	        <button type="submit" class="btn btn-sm w-100 btn-dark p-2 shawdow rounded">Sign Up </button>
	    </div>
        
         <p class="fw-light text-reset"> Click here to <a asp-action="ManagerLogin" asp-controller="Manager">Login</a></p>
    </form>
    </div>
    </div>
</div>

