@model CombineSample.Models.Employee 

@{
    Layout=null;
     ViewData["Title"] = "ManageLeaveRequest";
}
<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>SignUp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PersonalDetails.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" 
    integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" 
    crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header class="position-sticky top-0">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 nav-pils" id="pills-tab" role="tablist" style="background-color:purple">
            <div class="container-fluid" style="background-color:purple">
                <a class="navbar-brand nav-link text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Personal Details</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" >
                            <a class="nav-link  text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a> </button>
                        </li>
                         <li class="nav-item" >
                            <a class="nav-link  text-white fw-bold" asp-area="" asp-controller="Manager" asp-action="EmployeeList">Employee List</a> </button>
                        </li>
                        
                        
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Manager" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</header>
</body>

<div class="container">
    <div class="row shadow rounded">
        <div class="col-sm-8 col-md-8 col-ig-8 col-xl-6">
            <div class="col-sm-6 col-mb-6 col-lg-6 col-xl-6">
            <div class="mb-3">
                    <h2 class="text-pink text-center d-flex justify-content-right fst-italic"><h3><strong>VACATION REQUEST </strong></h3></h2>
                    <span class="fst-italic text-muted">Employee Vactions Request Details</span>
            </div>
        </div>
        <form method="post" asp-action="ViewDetails" asp-area="Manger">
            <input type="hidden" asp-for="employeeId">
        <div class="container">
        <div class="profile">
            <br>
        <div>
            @if(@Model.employeeImage != null)
            {
                <img src="@Url.Action("GetImage", "Manager", new { id = @Model.employeeId })" alt="img">
            }
            else
            {
                <img src="~/images/image.jpg" alt="default-img">
            }
        </div> 
            <div style="font-style: bold;" class="text"><h3 >@Model.employeeName</h3></div>
            <h5 class="role">Employee</h5>
        </div>
        <div class="content">
                <ul>
                    <li>ID: <span>@Model.employeeId</span></li>
                    <li>E-mail: <span>@Model.employeeEmail</span></li>
                    <li>DOB: <span>@Model.employeeDOB</span></li>
                    <li>Contact Number: <span>@Model.employeeMobile</span></li>
                    
                    
                    @if(@Model.leaveReason!="Not Assigned"){
                    <li>Reason: <span>@Model.leaveReason</span></li>
                    }
                    
                </ul>
        </div>
        @if(@Model.employee_vacation_req!="Approved"){
            <table class="table">
                <tbody>
                    <tr>
                        <td><a class="nav-link text-dark" asp-route-id="@Model.employeeId" asp-controller="Manager" asp-action="ApproveLeave">Approve</a></td>
                        <td><a class="nav-link text-dark" asp-route-id="@Model.employeeId" asp-controller="Manager" asp-action="RejectLeave">Reject</a></td>
                    </tr>
                </tbody>
            </table>
        }
        </form>
    </div>
</div>
<div>
    <footer class="border-top postion-sticky text-white p-3">
        <div class="container ">
            <div class="row">
                
            <h6 class="text-center">Â© Copyrights 2023 Aspire Systems</h6>
        </div>
      </div>
</footer>
</div>

