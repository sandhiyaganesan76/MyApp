@model CombineSample.Models.AddEmployee
@{
    Layout=null;
     ViewData["Title"] = "UpdateEmployee";
}
<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>SignUp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PersonalDetails.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" 
    integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" 
    crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header class="position-sticky top-0">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 nav-pils" id="pills-tab" role="tablist" style="background-color:purple">
            <div class="container-fluid" style="background-color:purple">
                <a class="navbar-brand nav-link text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Personal Details</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" >
                            <a class="nav-link  text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a> </button>
                        </li>
                         <li class="nav-item" >
                            <a class="nav-link  text-white fw-bold" asp-area="" asp-controller="Manager" asp-action="EmployeeListM">Employee List</a> </button>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Employee" asp-action="LogoutE">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        </div>
    </header>


<div class="container">
    <div class="row shadow rounded">
        <div class="col-sm-6 col-mb-6 col-lg-6 col-xl-6">
            <div class="mb-3">
                    <h2 class="text-pink text-center d-flex justify-content-right fst-italic"><h3><strong>UPDATE Employee</strong></h3></h2>
                    <span class="fst-italic text-muted"> Update Employee Details </span>
            </div>
           
            <form method="post" asp-action="AddEmployee" asp-controller="Manager" >
            <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="employeeName" type="text" id="employeeName" class="form-control" >
            </div>
            </div>
            <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="employeeEmail" type="text" id="employeeEmail" class="form-control">
            </div>
            </div>
            <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="employeeDOB" type="date" id="employeeDOB" class="form-control" >
                
            </div>
            </div>
            <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="employeeAge" type="text" id="employeeAge" class="form-control" >
            </div>
            </div>
            <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="employeeMobile" type="text" id="employeeMobile" class="form-control" >
            </div>
            </div>
             

            <div class="mb-1 row">
             <div class="form-group">
             <select id="employmentStatus" name="employmentStatus" class="col-sm-2 col-form-label form-control" required>
                <option value="">Please select an option</option>
                <option value="option1" selected="@(Model?.employmentStatus == "Trainee" ? "selected" : null)">Trainee</option>
                <option value="System analyst" selected="@(Model?.employmentStatus == "System analyst" ? "selected" : null)">System analyst</option>
                <option value="Associate Software Engineer" selected="@(Model?.employmentStatus == "Associate Software Engineer" ? "selected" : null)">Associate Software Engineer</option>
                <option value="Senior Software Engineer" selected="@(Model?.employmentStatus == "Senior Software Engineer" ? "selected" : null)">Senior Software Engineer</option>
                <option value="Associate Technical Architect" selected="@(Model?.employmentStatus == "Associate Technical Architect " ? "selected" : null)">Associate Technical Architect </option>
                <option value="Senior Technical Architect" selected="@(Model?.employmentStatus == "Senior Technical Architect " ? "selected" : null)" >Senior Technical Architect </option>
            </select>
            </div>
            </div>
            
            <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="employmentStartDate" type="date" id="employmentStartDate" class="form-control" >
            </div>
            </div>
            <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="employeeLocation" type="text" id="employeeLocation" class="form-control" >
            </div>
            </div>
             <div class="mb-1 row">
             <div class="form-group">
             <select id="EmployeeMartialStatus" name="EmployeeMartialStatus" class="col-sm-2 col-form-label form-control" required>
                <option value="">Please select an option</option>
                <option value="Married" selected="@(Model?.EmployeeMartialStatus == "Married" ? "selected" : null)">Married</option>
                <option value="Unmarried" selected="@(Model?.EmployeeMartialStatus == "Unmarried" ? "selected" : null)">Unmarried</option>
                </select>
            <span asp-validation-for="EmployeeMartialStatus" class="text-danger"></span>
            </div>
            </div>
           <button align="center" type="submit" class="btn btn-sm w-100 btn-dark p-2 shawdow rounded" id="submitbutton" value="Save">Submit</button>
        </form>
    </div>
</div>
</div>
<div>
