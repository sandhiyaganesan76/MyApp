<div class="container">
    <div class="row shadow rounded">
        <div class="col-sm-6 col-mb-6 col-lg-6 col-xl-6">
             <div class="mb-3">
                    <h2 class="text-pink text-center d-flex justify-content-right fst-italic"><h3><strong>EMPLOYEE LIST</strong></h3></h2>
                    <span class="fst-italic text-muted">Update Employee Details</span>
            </div>
           <form method="post" asp-action="NewUpdateEmployee" asp-area="Manager">
            <input type="hidden" asp-for="employeeId">
            <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="employeeName" type="text" id="employeeName" class="form-control">
            </div>
            </div>
             <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="employeeEmail" type="text" id="employeeEmail" class="form-control">
            </div>
            </div>
            <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="employeeDOB" type="date" id="employeeDOB" class="form-control">
            </div>
            </div>
            <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="employeeAge" type="text" id="employeeAge" class="form-control">
                <span asp-validation-for="employeeAge" class="text-danger"></span>
            </div>
            </div>
            <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="employeeMobile" type="text" id="employeeNumber" class="form-control">
                <span asp-validation-for="employeeMobile" class="text-danger"></span>
            </div>
            </div>
            
            <div class="mb-1 row">
\            <div class="form-group">
                <input asp-for="employmentStatus" type="text" id="employmentStatus" class="form-control">
                <span asp-validation-for="employmentStatus" class="text-danger"></span>
            </div>
            </div>
            <div class="mb-1 row">
            
            <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="employmentStartDate" type="date" id="employmentStartDate" class="form-control">
                <span asp-validation-for="employmentStartDate" class="text-danger"></span>
            </div>
            </div>
            <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="employeeLocation" type="text" id="employeeLocation" class="form-control">
                <span asp-validation-for="employeeLocation" class="text-danger"></span>
            </div>
            </div>
           <div class="mb-1 row">
            <div class="form-group">
                <input asp-for="EmployeeMartialStatus" type="text" id="EmployeeMartialStatus" class="form-control">
                <span asp-validation-for="EmployeeMartialStatus" class="text-danger"></span>
            </div>
            </div>
            <button align="center" type="submit" class="btn btn-sm w-100 btn-dark p-2 shawdow rounded" id="submitbutton" value="Save">Submit</button>
        </form>
        <br>
        <a class="nav-link text-dark"  asp-controller="Manager" asp-action="NewEmployeeRegisterList"> Back To Employee List </a>
    </div>
            
</div>
</div>
